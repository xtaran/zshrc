# -*- sh -*-
#################
# abe's .Xalias #
#################

if [ "$DISPLAY" != "" ]; then
    alias	xl=xlock
                xv() { /usr/bin/xv "$@" & }

    alias	xrsh=xterm -e rsh
    alias	xssh=xterm -e ssh

    alias	irc="$HOME/bin/ircstart.sh"
    alias	fehxv='feh -ZFdxpr'

    alias	isoxterm='xterm +lc +u8'
fi
