# -*- sh -*-

if [ "$HOST" = wiggis -o "$HOST" = phd-imap ]; then
    hash -d imap=/var/imap/a/abe
fi

if [ "$NISDOMAINNAME" = "phys.ethz.ch" ]; then
    hash -d local=/pub/debian-local
    hash -d configs=/pub/debian-local/configs
    # Default currently: Lenny
    hash -d SERVER=/pub/debian-local/configs/lenny/SERVER
    hash -d SITE=/pub/debian-local/configs/lenny/SITE
    # All our current and probably future distributions
    hash -d etch=/pub/debian-local/configs/etch
    hash -d lenny=/pub/debian-local/configs/lenny
    hash -d squeeze=/pub/debian-local/configs/squeeze
    hash -d karmic=/pub/debian-local/configs/karmic
    hash -d lucid=/pub/debian-local/configs/lucid
    hash -d maverick=/pub/debian-local/configs/maverick
fi

if [ -d /usr/share/doc/debian-policy ]; then
    hash -d policy=/usr/share/doc/debian-policy
fi

if [ -d /usr/share/doc/developers-reference ]; then
    hash -d reference=/usr/share/doc/developers-reference
fi
