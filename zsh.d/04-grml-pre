# -*- sh -*-
# Do not warn about old skel dot-files anymore
GRML_WARN_SKEL=0

if which acpi > /dev/null; then
    if [ "`acpi`" = "" -o "$HOSTNAME" = loadrunner ]; then
	BATTERY=0
    else
	BATTERY=1
    fi
else
    BATTERY=0
fi

export EDITOR="emacsclient -a emacs"
export BROWSER="conkeror"
export ABROWSER="lynx"
