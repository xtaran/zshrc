# -*- sh -*-

# TLDs
alias -s com=$BROWSER
alias -s de=$BROWSER
alias -s ch=$BROWSER
alias -s at=$BROWSER
alias -s net=$BROWSER
alias -s org=$BROWSER
# Conflict with Emacs' org-mode?
alias -s org=$BROWSER

# Documents
alias -s pdf=xpdf
alias -s txt='emacsclient -a emacs'

# Videos
alias -s flv=mplayer
alias -s mp4=mplayer
alias -s avi=mplayer
alias -s mpg=mplayer
alias -s wmv=mplayer

# Audio
alias -s mp3=mpg123
alias -s ogg=ogg123
alias -s flac=ogg123

alias -s gif=sxiv png=sxiv jpg=sxiv jpeg=sxiv
